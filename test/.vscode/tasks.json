{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-9 build active file",
            "command": "/usr/bin/g++-9",
            "args": [
                "-fdiagnostics-color=always",
                "-Ddebug",
                "-std=c++17",
                "-Wl,--wrap,socket",
                "-Wl,--wrap,connect",
                "-Wl,--wrap,listen",
                "-Wl,--wrap,close",
                "-Wl,--wrap,read",
                "-Wl,--wrap,write",
                "-Wl,--wrap,getaddrinfo",
                "-Wl,--wrap,freeaddrinfo",
                "-Wl,--wrap,bind",
                "-Wl,--wrap,accept",
                "-Wl,--wrap,setsockopt",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L../src/build",
                "-lsrc",
                "-lgtest",
                "-lpthread",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            //"dependsOn": ["build_server"],
        },
